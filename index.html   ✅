    font-weight:bold;
    margin-top:14px;
    display:block;
    font-size:14px;
}

input, select {
    width:100%;
    padding:12px;
    margin-top:6px;
    font-size:16px;
    border:1px solid #b7aa9a;
    border-radius:8px;
    background:#ffffff;
}

/* oberstes Feld leicht grün */
#geraetNeu {
    background:#eef7e9;
    border-color:#86b686;
}

